# bindsym $mod+p exec i3lock -c 100000 -e -f & sleep 2 && xset dpms force off

# Remove window titlebar
for_window [class=".*"] border pixel 0

# i3-gaps
gaps inner 16
gaps outer 2
smart_gaps on

# Keys for audio volume (install playerctl: `sudo pacman -S playerctl`)
bindsym XF86AudioRaiseVolume exec amixer -q -D pulse sset Master 5%+ && pkill -RTMIN+1 i3blocks && dunstify -r 7778 -u low "`getaudiodescription`" "`getaudiovolume` `getaudiomuted`"
bindsym XF86AudioLowerVolume exec amixer -q -D pulse sset Master 5%- && pkill -RTMIN+1 i3blocks && dunstify -r 7778 -u low "`getaudiodescription`" "`getaudiovolume` `getaudiomuted`"
bindsym XF86AudioMute exec amixer -q -D pulse sset Master toggle && pkill -RTMIN+1 i3blocks && dunstify -r 7778 -u low "`getaudiodescription`" "`getaudiovolume` `getaudiomuted`"
bindsym XF86AudioPlay exec playerctl play-pause
bindsym XF86AudioPause exec playerctl play-pause
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous

# Screenshot utility
